<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="quiz_examination_system.ExamPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:quiz_examination_system"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent"
    Loaded="Page_Loaded">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock x:Name="QuizTitleText" Text="Loading quiz..." Style="{StaticResource TitleTextBlockStyle}"/>
                <TextBlock x:Name="QuizInfoText" Text="" Style="{StaticResource BodyTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="0,4,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="16">
                <StackPanel>
                    <TextBlock Text="Time Remaining" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock x:Name="TimerText" Text="00:00" Style="{StaticResource TitleTextBlockStyle}" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" FontSize="32" FontWeight="Bold"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Padding="12">
                <StackPanel Spacing="8">
                    <TextBlock Text="Question List" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <ListView x:Name="QuestionListView" SelectionChanged="QuestionListView_SelectionChanged">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8" CornerRadius="4" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                                    <TextBlock Text="{Binding}" Style="{StaticResource BodyTextBlockStyle}"/>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Padding="24">
                <ScrollViewer>
                    <StackPanel x:Name="QuestionPanel" Spacing="16">
                        <TextBlock x:Name="QuestionNumberText" Text="Question 1" Style="{StaticResource SubtitleTextBlockStyle}"/>
                        <TextBlock x:Name="QuestionText" Text="Loading question..." TextWrapping="Wrap" Style="{StaticResource BodyTextBlockStyle}" FontSize="16"/>
                        
                        <StackPanel x:Name="AnswersPanel" Spacing="12" Margin="0,16,0,0">
                            <RadioButton x:Name="OptionA" Content="A. Loading..." GroupName="Answers" Tag="A"/>
                            <RadioButton x:Name="OptionB" Content="B. Loading..." GroupName="Answers" Tag="B"/>
                            <RadioButton x:Name="OptionC" Content="C. Loading..." GroupName="Answers" Tag="C"/>
                            <RadioButton x:Name="OptionD" Content="D. Loading..." GroupName="Answers" Tag="D"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,24,0,0">
                            <Button x:Name="PrevButton" Content="Previous" Click="PrevButton_Click" IsEnabled="False"/>
                            <Button x:Name="NextButton" Content="Next" Click="NextButton_Click" Style="{StaticResource AccentButtonStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <Grid Grid.Row="2" Margin="0,16,0,0">
            <Button x:Name="ExitButton" Content="Exit Quiz" Click="ExitButton_Click" 
                    Padding="16,12"
                    HorizontalAlignment="Left">
                <Button.Resources>
                    <SolidColorBrush x:Key="ButtonBackground" Color="#E74C3C"/>
                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#C0392B"/>
                    <SolidColorBrush x:Key="ButtonForeground" Color="White"/>
                    <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="White"/>
                </Button.Resources>
            </Button>
            <Button x:Name="SubmitButton" Content="Submit" Click="SubmitButton_Click" 
                    Style="{StaticResource AccentButtonStyle}" Padding="24,12" FontWeight="Bold"
                    HorizontalAlignment="Right"/>
        </Grid>

        <InfoBar x:Name="MessageBar" 
                 Grid.Row="2"
                 IsOpen="False" 
                 Severity="Informational" 
                 IsClosable="True"
                 VerticalAlignment="Bottom"
                 HorizontalAlignment="Right"
                 MaxWidth="400"
                 Margin="24">
            <InfoBar.Shadow>
                <ThemeShadow />
            </InfoBar.Shadow>
        </InfoBar>
    </Grid>
</Page>
