<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="quiz_examination_system.UserManagementWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:quiz_examination_system"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="User Management">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="User Management" Style="{StaticResource TitleTextBlockStyle}" Margin="0,0,0,16" />

        <StackPanel Grid.Row="1" Spacing="12" Orientation="Horizontal" Margin="0,0,0,24">
            <Button Content="Create New User" Click="CreateUser_Click" />
            <Button Content="Refresh" Click="Refresh_Click" />
        </StackPanel>

        <ListView Grid.Row="2" x:Name="UsersGrid" SelectionMode="Single">
            <ListView.HeaderTemplate>
                <DataTemplate>
                    <Grid Padding="12" ColumnSpacing="12" Background="{ThemeResource LayerFillColorDefaultBrush}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="200" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Username" FontWeight="Bold" />
                        <TextBlock Grid.Column="1" Text="Role" FontWeight="Bold" />
                        <TextBlock Grid.Column="2" Text="Status" FontWeight="Bold" />
                        <TextBlock Grid.Column="3" Text="Actions" FontWeight="Bold" />
                    </Grid>
                </DataTemplate>
            </ListView.HeaderTemplate>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="x:Object">
                    <Grid Padding="12" ColumnSpacing="12" BorderThickness="0,0,0,1" BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="200" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding username}" VerticalAlignment="Center" />
                        <TextBlock Grid.Column="1" Text="{Binding role}" VerticalAlignment="Center" />
                        <TextBlock Grid.Column="2" Text="{Binding status}" VerticalAlignment="Center" />
                        <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="8">
                            <Button Content="Reset" Click="ResetPassword_Click" Tag="{Binding id}" FontSize="12" Padding="8,4" />
                            <Button Content="Toggle" Click="ToggleStatus_Click" Tag="{Binding id}" FontSize="12" Padding="8,4" />
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <InfoBar Grid.Row="3" x:Name="MessageBar" IsOpen="False" IsClosable="True" Margin="0,16,0,0" />
    </Grid>
</Window>
