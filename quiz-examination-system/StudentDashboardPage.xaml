<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="quiz_examination_system.StudentDashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:quiz_examination_system"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer Padding="32,24">
        <StackPanel Spacing="24">
            <StackPanel Spacing="8">
                <TextBlock Text="Available Quizzes" Style="{StaticResource TitleTextBlockStyle}" />
                <TextBlock Text="Select a quiz to take the exam" Style="{StaticResource BodyTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
            </StackPanel>

            <StackPanel Spacing="12">
                <TextBlock Text="Your Quizzes" Style="{StaticResource SubtitleTextBlockStyle}" />
                <Button x:Name="TakeQuizBtn" Content="Take Quiz" HorizontalAlignment="Left" Click="TakeQuiz_Click" Padding="16,8" Style="{StaticResource AccentButtonStyle}" />
                <TextBlock Text="Access the quizzes assigned to you by instructors" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
            </StackPanel>

            <InfoBar x:Name="ActionMessage" IsOpen="False" Severity="Informational" IsClosable="True" />
        </StackPanel>
    </ScrollViewer>
</Page>
