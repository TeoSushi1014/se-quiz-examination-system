<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="quiz_examination_system.StudentDashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:quiz_examination_system"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent"
    Loaded="Page_Loaded">

    <Grid>
        <ScrollViewer Padding="32,24">
        <StackPanel Spacing="32">
            <StackPanel Spacing="8">
                <TextBlock Text="Available Quizzes" Style="{StaticResource TitleTextBlockStyle}" />
                <TextBlock Text="Select a quiz to begin the exam" 
                           Style="{StaticResource BodyTextBlockStyle}" 
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
            </StackPanel>

            <GridView x:Name="QuizzesGridView" 
                      SelectionMode="Single" 
                      SelectionChanged="QuizzesGridView_SelectionChanged"
                      ItemsSource="{x:Bind Quizzes, Mode=OneWay}">
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="local:QuizItemStudent">
                        <Grid Width="220" 
                              MinHeight="200" 
                              Padding="16" 
                              CornerRadius="8" 
                              BorderThickness="1"
                              BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                              Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                            
                            <StackPanel Spacing="10" VerticalAlignment="Top">
                                <TextBlock Text="{x:Bind Title, Mode=OneWay}" 
                                           Style="{StaticResource BodyStrongTextBlockStyle}" 
                                           TextWrapping="Wrap"
                                           MaxLines="2"
                                           TextTrimming="CharacterEllipsis"
                                           Height="44"
                                           ToolTipService.ToolTip="{x:Bind Title, Mode=OneWay}"/>
                                
                                <StackPanel Spacing="6">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <FontIcon Glyph="&#xE916;" 
                                                  FontSize="14" 
                                                  Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                                        <TextBlock Style="{StaticResource CaptionTextBlockStyle}">
                                            <Run Text="{x:Bind TimeLimit, Mode=OneWay}"/>
                                            <Run Text=" minutes"/>
                                        </TextBlock>
                                    </StackPanel>
                                    
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <FontIcon Glyph="&#xE9F9;" 
                                                  FontSize="14" 
                                                  Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                                        <TextBlock Text="{x:Bind TotalPoints, Mode=OneWay}" 
                                                   Style="{StaticResource CaptionTextBlockStyle}"/>
                                    </StackPanel>
                                    
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <FontIcon Glyph="&#xE81C;" 
                                                  FontSize="14" 
                                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        <TextBlock Style="{StaticResource CaptionTextBlockStyle}">
                                            <Run Text="Attempts: "/>
                                            <Run Text="{x:Bind AttemptsUsed, Mode=OneWay}"/>
                                            <Run Text=" / "/>
                                            <Run Text="{x:Bind MaxAttempts, Mode=OneWay}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </StackPanel>

                                <Border Background="{x:Bind StatusBadgeColor, Mode=OneWay}" 
                                        CornerRadius="4" 
                                        Padding="8,4"
                                        HorizontalAlignment="Left"
                                        Margin="0,4,0,0">
                                    <TextBlock Text="{x:Bind Status, Mode=OneWay}" 
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="White"
                                               FontWeight="SemiBold"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>

            <Button x:Name="StartExamButton" 
                    Click="StartExam_Click" 
                    Style="{StaticResource AccentButtonStyle}"
                    IsEnabled="False"
                    MinWidth="200"
                    HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE768;"/>
                    <TextBlock Text="Start Exam" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <ProgressRing x:Name="LoadingRing" IsActive="False" Width="48" Height="48"/>
        </StackPanel>
    </ScrollViewer>

        <InfoBar x:Name="ActionMessage" 
                 IsOpen="False" 
                 Severity="Informational" 
                 IsClosable="True"
                 VerticalAlignment="Bottom"
                 HorizontalAlignment="Right"
                 MaxWidth="400"
                 Margin="24">
            <InfoBar.Shadow>
                <ThemeShadow />
            </InfoBar.Shadow>
        </InfoBar>
    </Grid>
</Page>
