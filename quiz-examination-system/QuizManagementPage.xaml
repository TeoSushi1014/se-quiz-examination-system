<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="quiz_examination_system.QuizManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:quiz_examination_system"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent"
    Loaded="Page_Loaded">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Spacing="16" Margin="0,0,0,24">
            <TextBlock Text="Quiz management" Style="{StaticResource TitleTextBlockStyle}"/>
            
            <StackPanel Orientation="Horizontal" Spacing="12">
                <Button x:Name="CreateQuizBtn" Content="Create quiz" Click="CreateQuiz_Click" Style="{StaticResource AccentButtonStyle}">
                    <Button.KeyboardAccelerators>
                        <KeyboardAccelerator Key="N" Modifiers="Control"/>
                    </Button.KeyboardAccelerators>
                </Button>
                <Button Content="Refresh" Click="RefreshQuizzes_Click"/>
            </StackPanel>
        </StackPanel>

        <Grid Grid.Row="1">
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                   BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                   BorderThickness="1"
                   CornerRadius="8"
                   Padding="0">
                <Grid>
                    <ListView x:Name="QuizListView" SelectionMode="None">
                        <ListView.Header>
                            <Grid Padding="16,12" 
                                 Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                 BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                                 BorderThickness="0,0,0,1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="200"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Title" FontWeight="SemiBold" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Grid.Column="1" Text="Questions" FontWeight="SemiBold" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Grid.Column="2" Text="Points" FontWeight="SemiBold" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Grid.Column="3" Text="Time (min)" FontWeight="SemiBold" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Grid.Column="4" Text="Max attempts" FontWeight="SemiBold" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Grid.Column="5" Text="Actions" FontWeight="SemiBold" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </Grid>
                        </ListView.Header>

                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="local:QuizItem">
                                <Grid Padding="16,12" 
                                     Background="Transparent"
                                     BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                                     BorderThickness="0,0,0,1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="200"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" 
                                              Text="{x:Bind Title, Mode=OneWay}" 
                                              TextWrapping="Wrap"
                                              MaxLines="2"
                                              TextTrimming="CharacterEllipsis"
                                              FontWeight="SemiBold"
                                              VerticalAlignment="Center"/>

                                    <TextBlock Grid.Column="1" 
                                              Text="{x:Bind QuestionCount, Mode=OneWay}"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>

                                    <TextBlock Grid.Column="2" 
                                              Text="{x:Bind TotalPoints, Mode=OneWay}"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>

                                    <TextBlock Grid.Column="3" 
                                              Text="{x:Bind TimeLimitMinutes, Mode=OneWay}"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>

                                    <TextBlock Grid.Column="4" 
                                              Text="{x:Bind MaxAttempts, Mode=OneWay}"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>

                                    <StackPanel Grid.Column="5" 
                                               Orientation="Horizontal" 
                                               Spacing="8"
                                               VerticalAlignment="Center">
                                        <Button Content="Edit" 
                                               Tag="{x:Bind QuizId, Mode=OneWay}"
                                               Click="EditQuiz_Click"
                                               Style="{StaticResource AccentButtonStyle}"
                                               Padding="12,6"/>
                                        <Button Content="Delete" 
                                               Tag="{x:Bind QuizId, Mode=OneWay}"
                                               Click="DeleteQuiz_Click"
                                               Padding="12,6"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>

                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>

                    <ProgressRing x:Name="LoadingRing"
                                 IsActive="False"
                                 Width="48"
                                 Height="48"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"/>

                    <TextBlock x:Name="EmptyStateText"
                              Text="No quizzes found"
                              Visibility="Collapsed"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                              FontSize="16"/>
                </Grid>
            </Border>
            
            <InfoBar x:Name="ActionMessage" 
                     IsOpen="False" 
                     IsClosable="True"
                     VerticalAlignment="Bottom"
                     HorizontalAlignment="Right"
                     MaxWidth="400"
                     Margin="24"
                     Canvas.ZIndex="999">
                <InfoBar.Shadow>
                    <ThemeShadow />
                </InfoBar.Shadow>
            </InfoBar>
        </Grid>

        <ContentDialog x:Name="QuizEditorDialog"
                      Title="Create quiz"
                      PrimaryButtonText="Save"
                      CloseButtonText="Cancel"
                      DefaultButton="Primary"
                      MinWidth="1400"
                      MaxWidth="1500">
            <ScrollViewer MaxHeight="650">
                <Grid ColumnSpacing="24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Spacing="16">
                    <TextBox x:Name="InputTitle" 
                           Header="Quiz title" 
                           PlaceholderText="Enter quiz title..."/>

                    <NumberBox x:Name="InputTimeLimit"
                             Header="Time limit (minutes)"
                             Minimum="1"
                             Maximum="300"
                             Value="60"
                             SpinButtonPlacementMode="Inline"/>

                    <NumberBox x:Name="InputTotalPoints"
                             Header="Total points"
                             Minimum="1"
                             Maximum="1000"
                             Value="100"
                             SpinButtonPlacementMode="Inline"/>

                    <NumberBox x:Name="InputMaxAttempts"
                             Header="Max attempts (leave empty for unlimited)"
                             PlaceholderText="e.g., 3 (or leave empty)"
                             Minimum="1"
                             Maximum="100"
                             SpinButtonPlacementMode="Inline"/>

                    <ComboBox x:Name="ComboResultVisibility" 
                            Header="Result visibility" 
                            SelectedIndex="0" 
                            HorizontalAlignment="Stretch">
                        <ComboBoxItem Content="Immediate"/>
                        <ComboBoxItem Content="After quiz end"/>
                        <ComboBoxItem Content="Manual release"/>
                    </ComboBox>

                    <CheckBox x:Name="CheckShuffleQuestions" Content="Shuffle questions"/>
                    <CheckBox x:Name="CheckShuffleAnswers" Content="Shuffle answers"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Spacing="12">
                    <TextBlock Text="Select questions" FontWeight="SemiBold"/>
                    
                    <AutoSuggestBox x:Name="QuestionSearchBox"
                                   PlaceholderText="Search questions..."
                                   QueryIcon="Find"
                                   TextChanged="QuestionSearchBox_TextChanged"/>
                    
                    <Border BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                           BorderThickness="1"
                           CornerRadius="4"
                           Height="450">
                        <ScrollViewer>
                            <ListView x:Name="QuestionSelectionList" 
                                    SelectionMode="Multiple"
                                    ItemsSource="{x:Bind AvailableQuestions, Mode=OneWay}">
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="local:QuestionItem">
                                        <StackPanel Padding="8,4" Spacing="4">
                                            <TextBlock Text="{x:Bind QuestionText, Mode=OneWay}" 
                                                     TextWrapping="Wrap"
                                                     FontWeight="SemiBold"/>
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <TextBlock Text="{x:Bind DifficultyLevel, Mode=OneWay}"
                                                         FontSize="12"
                                                         Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                <TextBlock Text="â€¢" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                <TextBlock Text="{x:Bind Topic, Mode=OneWay}"
                                                         FontSize="12"
                                                         Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </ScrollViewer>
                    </Border>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </ContentDialog>
    </Grid>
</Page>
